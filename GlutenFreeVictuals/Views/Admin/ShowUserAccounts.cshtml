@model IEnumerable<User>

<h2>User Accounts</h2>

<div>
    <table class="table">
        <tr><th>ID</th><th>Name</th><th>Email</th></tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
        }
        else
        {
            foreach(User user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.Email</td>
                </tr>
            }
        }
    </table>
    <a class="btn btn-primary" asp-action="Index">Index</a>
    <a class="btn btn-primary" asp-action="CreateUserAccount">Create Account</a>
</div>
